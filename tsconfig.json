{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2017",
		"sourceMap": true,
		"inlineSources": true,
		"sourceRoot": "/",
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"strict": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"paths": {
			"@lib/*": ["./src/lib/*"],
			"@modules/*": ["./src/modules/*"],
			"@config/*": ["./src/config/*"],
			"@test/*": ["./test/*"]
		}
	},
	"ts-node": {
		"compilerOptions": {
			"paths": {
				"@lib/*": ["./src/lib/*"],
				"@modules/*": ["./src/modules/*"],
				"@config/*": ["./src/config/*"],
				"@test/*": ["./test/*"]
			}
		}
	}
}
